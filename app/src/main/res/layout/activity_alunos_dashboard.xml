<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="@drawable/background"
    android:scrollbarSize="4dp"
    tools:context=".view.AlunosDashboard" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/title_selecione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione a mátéria "
            android:textSize="34sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/txtPrj1"
            android:background="@color/azul1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Projeto Interdisciplinar I"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/title_selecione"
            />


        <TextView
            android:id="@+id/txtPrj2"
            android:background="@color/azul1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:clickable="true"
            android:text="Projeto Interdisciplinar II"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/txtPrj1"/>

        <TextView
            android:id="@+id/txtPrj3"
            android:background="@color/azul1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:clickable="true"
            android:text="Projeto Interdisciplinar III"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/txtPrj2"/>

        <TextView
            android:id="@+id/txtPrj4"
            android:background="@color/azul1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:clickable="true"
            android:text="Projeto Interdisciplinar IV"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/txtPrj3"/>

        <TextView
            android:id="@+id/txtAlp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:background="@color/azul1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Algoritmo e Lógica de Programação "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/txtPrj4"/>

        <TextView
            android:id="@+id/txtBd"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:background="@color/azul1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Banco de Dados"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/txtAlp"/>

        <TextView
            android:id="@+id/txtAps1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:background="@color/azul1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Análise e Projeto de Sistemas I"
            app:layout_constraintTop_toBottomOf="@+id/txtBd"/>

        <TextView
            android:id="@+id/txtAps2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/azul1"
            android:textColor="@color/black"
            android:clickable="true"
            android:textSize="20sp"
            android:text="Análise e Projeto de Sistemas II"
            app:layout_constraintTop_toBottomOf="@+id/txtAps1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            style="@style/Button2"
            android:layout_marginTop="50dp"
            android:text="Histórico de Frequencia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAps2"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>